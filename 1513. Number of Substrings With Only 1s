class Solution {
    public int numSub(String s) {
        long MOD = 1000000007;
        long ans = 0 , c = 0;
        for(char ch:s.toCharArray()){
            if(ch == '1'){
                c++;
                ans = (ans + c) % MOD;
            }else{
                c = 0;
            }
        }
        return (int)ans;
    }
}
