class Solution {
    public long maximumHappinessSum(int[] happiness, int k) {
        Arrays.sort(happiness);
        int n = happiness.length;
        long sum = 0;
        for(int i=0;i<k;i++){
            int l = happiness[n - 1 - i] - i; // pick largest
            if(l > 0) sum += l;
        }
        return sum;
    }
}
