class Solution {
    public int[] loudAndRich(int[][] richer, int[] quiet) {
        int n = quiet.length;
        List<List<Integer>> graph = new ArrayList<>();
        for (int i = 0; i < n; i++) {
            graph.add(new ArrayList<>());
        }
        
        // Build graph: b -> a (a is richer than b)
        for (int[] r : richer) {
            graph.get(r[1]).add(r[0]);
        }
        
        int[] ans = new int[n];
        Arrays.fill(ans, -1);
        
        // DFS with memoization
        for (int i = 0; i < n; i++) {
            dfs(i, graph, quiet, ans);
        }
        
        return ans;
    }
    
    private int dfs(int u, List<List<Integer>> graph, int[] quiet, int[] ans) {
        if (ans[u] != -1) return ans[u];
        
        ans[u] = u; // start with self
        for (int v : graph.get(u)) {
            int candidate = dfs(v, graph, quiet, ans);
            if (quiet[candidate] < quiet[ans[u]]) {
                ans[u] = candidate;
            }
        }
        return ans[u];
    }
}
