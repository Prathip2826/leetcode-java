class Solution {
    public String shortestCompletingWord(String licensePlate, String[] words) {
        int[] tar = countlet(licensePlate);
        String res = null;
        for(String w : words){
            if(covers(w , tar)){
                if(res == null || w.length()<res.length()){
                    res = w;
                }
            }
        }
        return res;
    }
    private int[] countlet(String s){
    int[] count = new int[26];
    for(char c:s.toLowerCase().toCharArray()){
        if(Character.isLetter(c)){
            count[c - 'a']++;
        }
    }
    return count;
    }
    private boolean covers(String w , int[] tar){
        int[] count = new int[26];
        for(char c:w.toLowerCase().toCharArray()){
            count[c - 'a']++;
        }
        for(int i=0;i<26;i++){
            if(count[i]<tar[i])return false;
        }
        return true;
    }
}
